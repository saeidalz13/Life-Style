generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model plan {
  title     String    @id
  email     String
  days      Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  dayPlan   dayPlan[]
}

model dayPlan {
  id        Int     @id @default(autoincrement())
  plan      plan    @relation(fields: [planTitle], references: [title], onDelete: Cascade) // This is not a column
  planTitle String
  day       Int
  Moves     moves[]
}

model moves {
  id        Int     @id @default(autoincrement())
  title     String
  set       Int
  rep       Int
  dayplan   dayPlan @relation(fields: [dayPlanId], references: [id], onDelete: Cascade)
  dayPlanId Int
}
